    "test": "npm run test:copy && npm run test:server",
    "test:copy": "cp -fv ./src/index.js ./test/connections.js",
    "test:server": "node ./server.js"
  },
  "keywords": [
    "houdini",
    "css",
    "css-houdini",
    "PaintWorklet",
    "paint",
    "worklet"
  ],
