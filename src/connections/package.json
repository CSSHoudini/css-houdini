{
  "name": "css-houdini-connections",
  "version": "1.0.5",
  "description": "CSS Houdini Background Connections",
  "source": "src/index.js",
  "main": "dist/connections.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "microbundle --entry src/index.js --output dist/connections.js --no-pkg-main --format modern --no-sourcemap",
